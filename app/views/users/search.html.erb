<div class="container">
  <div class="row">
    <div class="col-md-3 search-form">
      <%= form_tag users_search_path, method: :get do %>
        <div class="form-group">
          <%= label_tag "name", "Search by user:", class: "search-user" %>
          <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Name" %>
        </div>
        <%= submit_tag "Search", name: nil, class: "btn btn-primary btn-md" %>
      <% end %>
    </div>
    
    <div class="col-md-9">
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Listing Users</div>
      
        <!-- Table -->
        <table class="table">
          <tr>
            <th>Name</th>
            <th>Email</th>
          </tr>
          
            <% @users.each do |user| %>
              <tr>
                <td><%= link_to user.name, user_path(user) %></td>
                <td><%= user.email %></td>
              </tr>
            <% end %>
        </table>
      </div>
    </div>
  </div>
  
  
</div>