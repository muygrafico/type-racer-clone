
<div id="reset-password" class="container">
  <div class="card card-container">
    <div class="modal-header">
      <%= link_to "&times;".html_safe, public_index_path, class: "close" %>
      <h4 class="modal-title">Recover password:</h4>
    </div>

    <div class="margin-2em">
      <%= form_for resource, as: resource_name,url: password_path(resource_name), html: {method: :post ,:class => "form-signin"} do |f| %>
      <%= devise_error_messages! %>

      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", option: {required: "required"} %>

      <%= f.submit "Send me reset password instructions" , class: "btn btn-lg btn-primary btn-block btn-signin" %>
      <% end %>
      <p><%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>
